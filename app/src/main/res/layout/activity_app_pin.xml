<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.settings.activities.SettingsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/generic_toolbar" />

    <TextView
        android:id="@+id/tv_you_can"
        android:layout_marginTop="@dimen/_16sdp"
        style="@style/BudgetPlanStyle.ButtonWhite16"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_can_set_pin"/>

    <TextView
        android:id="@+id/tv_set_pin"
        android:layout_marginTop="@dimen/_16sdp"
        style="@style/BudgetPlanStyle.GreenSemibold16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_you_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_pin"/>


</androidx.constraintlayout.widget.ConstraintLayout>