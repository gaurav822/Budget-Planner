    <EditText
        android:layout_marginRight="@dimen/_20sdp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:id="@+id/input_amount"
        android:inputType="number"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/liner"
        app:layout_constraintTop_toBottomOf="@id/input_amount"
        app:layout_constraintStart_toStartOf="@id/input_amount"
        app:layout_constraintEnd_toEndOf="@id/input_amount"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="2dp"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/npr"
        android:textColor="@color/green"
        style="@style/BudgetPlanStyle.VolteSemiBold20"
        app:layout_constraintStart_toEndOf="@id/liner"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@id/input_amount"
        app:layout_constraintBottom_toBottomOf="@id/liner"/>

    <TextView
        android:id="@+id/tv_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BudgetPlanStyle.Body1"
        android:text="Categories"
        android:textColor="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@id/liner"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_10sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/tv_categories"
        app:layout_constraintTop_toBottomOf="@id/tv_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvCategories" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BudgetPlanStyle.Body1"
        android:text="Comment"
        android:textColor="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@id/rvCategories"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="@id/tv_categories" />

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BudgetPlanStyle.Body1"
        android:text="Photo"
        android:textColor="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@id/tv_comment"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="@id/tv_categories" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/proceedStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/_200sdp"
        android:background="@drawable/boundry_proceed_disabled"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp">

        <TextView
            android:textColor="@color/disabled_text"
            style="@style/BudgetPlanStyle.Body1"
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

