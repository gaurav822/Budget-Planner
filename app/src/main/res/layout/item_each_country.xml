<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/countryLogo"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/img_aus" />

    <TextView
        style="@style/BudgetPlanStyle.VolteMediumWhite14"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Australian Dollar"
        app:layout_constraintLeft_toRightOf="@+id/countryLogo"
        app:layout_constraintTop_toTopOf="@id/countryLogo"
        app:layout_constraintBottom_toBottomOf="@id/countryLogo"
        android:id="@+id/currencyName" />

    <TextView
        android:textColor="@color/lightGrey"
        android:text="AUD"
        style="@style/BudgetPlanStyle.VolteMediumWhite14"
        android:id="@+id/currencyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/countryLogo"
        app:layout_constraintBottom_toBottomOf="@id/countryLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>