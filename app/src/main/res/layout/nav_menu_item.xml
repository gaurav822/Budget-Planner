<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_12sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:scaleType="centerInside"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_marginLeft="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="@id/menu_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/menu_item_icon"
        app:layout_constraintLeft_toRightOf="@id/menu_item_icon"
        android:id="@+id/menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/NavDrawerMenuItemStyle"
        android:layout_gravity="center_vertical"
        android:textAppearance="?attr/textAppearanceListItem" />

</androidx.constraintlayout.widget.ConstraintLayout>
