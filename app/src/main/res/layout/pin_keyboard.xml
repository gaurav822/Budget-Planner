<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp">

    <ImageView
        android:id="@+id/ivViewCancel"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:padding="@dimen/_14sdp"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/textView0"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView0"
        app:srcCompat="@drawable/ic_backspace" />

    <ImageView
        android:id="@+id/ivFingerPrint"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:padding="@dimen/_14sdp"
        android:textSize="@dimen/pin_keypad_text_size"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/ic_fingerprint_24px" />

    <TextView
        android:id="@+id/textView1"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView1"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <TextView
        android:id="@+id/textView5"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@id/textView2" />


    <TextView
        android:id="@+id/textView6"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <TextView
        android:id="@+id/textView7"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="7"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <TextView
        android:id="@+id/textView8"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@id/textView5" />


    <TextView
        android:id="@+id/textView9"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="9"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

    <TextView
        android:id="@+id/ivViewBack"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:padding="@dimen/_18sdp"
        android:text="@string/cancel_keyboard"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_15ssp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <TextView
        android:id="@+id/textView0"
        style="@style/BudgetPlanStyle.Keyboard"
        android:layout_width="@dimen/pin_keypad_box_size"
        android:layout_height="@dimen/pin_keypad_box_size"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/pin_keypad_text_size"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@id/textView8" />


</androidx.constraintlayout.widget.ConstraintLayout>