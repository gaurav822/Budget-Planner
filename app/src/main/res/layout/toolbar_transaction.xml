<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar app:titleTextColor="@color/white"
    app:titleTextAppearance="@style/BudgetPlanStyle.H6"
    android:background="@drawable/bottom_corner_bg"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:navigationIcon="@drawable/icon_arrow_back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
       <androidx.constraintlayout.widget.ConstraintLayout
           android:visibility="gone"
           android:id="@+id/cl_category_bar"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/downloadButton"
               android:layout_marginTop="@dimen/_8sdp"
               android:layout_marginRight="@dimen/_8sdp"
               android:src="@drawable/img_download"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"/>

           <ImageView
               android:id="@+id/searchButton"
               app:layout_constraintEnd_toStartOf="@+id/downloadButton"
               app:layout_constraintTop_toTopOf="@id/downloadButton"
               android:layout_marginRight="@dimen/_8sdp"
               android:src="@drawable/img_search"
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"/>

           <TextView
               android:layout_marginTop="@dimen/_8sdp"
               android:id="@+id/tv_category"
               style="@style/BudgetPlanStyle.Body1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:textColor="@color/white"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toStartOf="@id/searchButton"
               app:layout_constraintTop_toTopOf="parent"
               tools:text="Transport" />

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/tv_category"
               app:layout_constraintStart_toStartOf="@id/tv_category"
               app:layout_constraintEnd_toEndOf="@id/tv_category">

               <TextView
                   android:id="@+id/tvCurrencySymbol"
                   style="@style/BudgetPlanStyle.SemiBoldWhite18"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   tools:text="NRs"/>

               <TextView
                   android:layout_marginLeft="@dimen/_2sdp"
                   android:id="@+id/totalAmount"
                   style="@style/BudgetPlanStyle.SemiBoldWhite18"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/tvCurrencySymbol"
                   tools:text="600"/>


           </androidx.constraintlayout.widget.ConstraintLayout>





           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cl_toolbar_extend_category"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/_60sdp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent" />

       </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_generic_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:id="@+id/tv_profile_name"
                style="@style/BudgetPlanStyle.H6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Add Transactions" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_toolbar_extend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_95sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>